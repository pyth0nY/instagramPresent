{
  "manifest_version": 3,
  "name": "Instagram Presence (Final)",
  "version": "3.0.0",
  "description": "Muestra tu actividad y la de tus amigos directamente en Instagram.",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.instagram.com/*" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.instagram.com/*"
      ],
      "js": [
        "supabase.js",
        "logic.js",
        "ui.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
}